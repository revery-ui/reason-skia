{
  "name": "reason-skia",
  "version": "0.1.0",
  "description": "Reason bindings for the Skia 2D graphics library",
  "scripts": {
    "format": "esy dune build @fmt --auto-promote"
  },
  "esy": {
    "build": [
      [
        "refmterr",
        "dune",
        "build",
        "-p",
        "skia"
      ]
    ],
    "install": [
      "esy-installer skia.install"
    ]
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/ctypes": "0.15.1",
    "@opam/dune": "*",
    "esy-skia": "revery-ui/esy-skia#d60e5fe",
    "@opam/lwt": "*",
    "refmterr": "*",
    "esy-freetype2": "^2.9.1007",
    "esy-sdl2": "*",
    "reason-sdl2": "^2.10.3016",
    "reason-native-crash-utils": "github:onivim/reason-native-crash-utils#ae1fd34"
  },
  "devDependencies": {
    "@opam/dune": "^2.4.0",
    "ocaml": "~4.7.0",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam#04733ed"
  },
  "resolutions": {
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def"
  }
}
