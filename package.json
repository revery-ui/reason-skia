{
  "name": "reason-skia",
  "version": "0.1.0",
  "description": "Reason bindings for the Skia 2D graphics library",
  "scripts": {
    "format": "esy dune build @fmt --auto-promote"
  },
  "esy": {
    "build": [
      [
        "refmterr",
        "dune",
        "build",
        "-p",
	"skia"
      ]
    ],
    "install": [
      "esy-installer skia.install"
    ]
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/ctypes": "0.15.1",
    "@opam/ctypes-foreign": "0.4.0",
    "@opam/dune": "*",
    "esy-skia": "github:revery-ui/esy-skia#91b10c9",
    "@opam/lwt": "*",
    "refmterr": "*",
    "esy-freetype2": "^2.9.1007",
    "esy-sdl2": "*",
    "reason-sdl2": "^2.10.3016"
  },
  "devDependencies": {
    "ocaml": "~4.7.0"
  },
  "resolutions": {
    "@esy-ocaml/libffi": "esy-ocaml/libffi#599bc3567ecf839240977b6d9aaf0b80f983b5aa",
    "esy-cmake": "prometheansacrifice/esy-cmake#2a47392def"
  }
}
